<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:id="@+id/ButtomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="preOnclick"
            android:text="Previous" />

        <Button
            android:id="@+id/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="nextOnclick"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NameAndNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtomLayout"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Word Rune Number" />

        <TextView
            android:id="@+id/wordruneId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/WrName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Father's Desires WordRune" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ReferenceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameAndNumberLayout"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="John 8:44a"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScriptureScroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ReferenceLayout">

        <TextView
            android:id="@+id/scripture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="You belong to your father, the devil, and you want to carry out your father's desire. He was a murderer from the beginning, not holding to the truth, for there is no truth in him."
            android:textAlignment="textStart" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ReferenceLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ScriptureScroll"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/referencecopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="John 8:44a"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/CharSsReqLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EffectLayout"

        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Char St" />

        <TextView
            android:id="@+id/CharStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView9"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="2dp"
            android:text="PA4"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/SStext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/SSreq"
            android:gravity="end"
            android:paddingRight="2dp"
            android:text="SS Lvl"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/SSreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="3" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/EffectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CharSSIncrLayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/Effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anyone who can say the Father's Desires WordRune perfectly can reduce the mound orc
sin enchantment by 2 difficulty levels."
            android:textAlignment="center" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/CharSSIncrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ChStIncr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="PA+1mu" />

        <TextView
            android:id="@+id/Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="May be used only once per day."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/SSIncr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="SS+3mu" />

    </RelativeLayout>

</RelativeLayout>

